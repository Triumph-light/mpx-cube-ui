border-top-1px($color)
  position relative
  &::before
    position absolute
    left 0
    top 0
    display block
    width 100%
    content ""
    border-top 1px solid $color
    transform-origin 0 0
    pointer-events none
    @media (min-resolution: 2dppx)
      width 200%
      transform scale(.5) translateZ(0)
    @media (min-resolution: 3dppx)
      width 300%
      transform scale(.33) translateZ(0)

