border-1px($color = #ccc, $radius = 2PX, $style = solid)
  position relative
  &::after
    position absolute
    left 0
    top 0
    display block
    width 100%
    height 100%
    content ""
    border 1PX $style $color
    border-radius $radius
    box-sizing border-box
    transform-origin 0 0
    transform-origin -0.1px 0
    pointer-events none
    @media (min-resolution: 2dppx)
      width 200%
      height 200%
      border-radius 'calc(%s * 2)' % $radius
      transform scale(.5) translateZ(0)
    @media (min-resolution: 3dppx)
      width 300%
      height 300%
      border-radius 'calc(%s * 3)' % $radius
      transform scale(.333) translateZ(0)

border-1px-reset($color = #ccc, $radius = 2PX, $style = solid)
  &::after
    border 1PX $style $color
    border-radius $radius
    @media (min-resolution: 2dppx)
      border-radius 'calc(%s * 2)' % $radius
    @media (min-resolution: 3dppx)
      border-radius 'calc(%s * 3)' % $radius

border-none()
  &::before
    display none
  &::after
    display none

flex-fix()
  flex 1
  flex-basis 0.000000001px
  width 1%

hide-scrollbar()
  &::-webkit-scrollbar
    width 0
    height 0

bg-image($url, $ext = ".png")
  add-property('background-image', s('url(%s)', $url + '@2x' + $ext))
  @media (min-resolution: 3dppx)
    add-property('background-image', s('url(%s)', $url + '@3x' + $ext))

functions = constant env
safe-area-fn(fn, position)
  s("%s(safe-area-inset-%s)", fn, position)
safe-area-mixin(property, position, important = false)
  for fn in functions
    {property} safe-area-fn(fn, position) important == true ? !important : unquote("")

safe-area-fn-extra(fn, position, extra)
  s("calc(%s(safe-area-inset-%s) + %s)", fn, position, extra)
safe-area-mixin-extra(property, position, extra = 0, important = false)
  for fn in functions
    {property} safe-area-fn-extra(fn, position, extra) important == true ? !important : unquote("")

padding-all($top, $right, $bottom, $left)
  padding-top $top
  padding-right $right
  padding-bottom $bottom
  padding-left $left

margin-all($top, $right, $bottom, $left)
  margin-top $top
  margin-right $right
  margin-bottom $bottom
  margin-left $left

border-radius-all($tl, $tr, $br, $bl)
  border-top-left-radius: $tl
  border-top-right-radius:  $tr
  border-bottom-right-radius:  $br
  border-bottom-left-radius:  $bl
