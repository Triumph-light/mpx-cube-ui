// @type body
$radio-modal-body-padding-right = 0 - $modal-body-padding-right // 内右边距

// @type subtitle
$radio-modal-subtitle-margin-bottom := 15px // 副标题下边距
$radio-modal-subtitle-padding-right := $var(modal-body-padding-right) // 副标题内右边距
$radio-modal-subtitle-line-height := 1.4 // 副标题行高
$radio-modal-subtitle-font-size := $var(font-size-sm) // 副标题字体大小
$radio-modal-subtitle-color := $var(text-color-desc) // 副标题颜色

// @type radio-group
$radio-modal-content-max-height := 214px // 内容区最大高度

// @type radio
$radio-modal-item-height := 70px // 选项高度
$radio-modal-item-padding-right := $var(modal-body-padding-right) // 选项内右边距
$radio-modal-content-item-color_disabled := $var(color-disabled) // 选项禁用态颜色
$radio-modal-item-bottom-border-color := $var(border-color-normal) // 选项下边框颜色