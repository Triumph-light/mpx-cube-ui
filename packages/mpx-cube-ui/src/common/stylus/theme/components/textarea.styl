// @type textarea
$textarea-color := #4B4B4D // 文本颜色
$textarea-bgc := transparent // 背景颜色
$textarea-padding := 13px 15px 21px 15px  // 内边距
$textarea-disable-bgc := #eee  // 禁用颜色
$textarea-border-color := #E8E9EB  // 边框颜色
$textarea-border-radius := 7px  // 边框圆角
$textarea-focus-border-color := $var(color-primary)  // 边框颜色
$textarea-indicator-color := #969699  // 指示器颜色
$textarea-indicator-waring-color := #C73122// 指示器警告颜色
$textarea-indicator-bottom := 5px // 指示器下边距
$textarea-indicator-right := 10px // 指示器右边距
$textarea-font-size := $font-size-md // 文本字号
$textarea-indicator-font-size := $font-size-sm // 指示器文本字号
$textarea-indicator-line-height := 14px // 指示器行高




