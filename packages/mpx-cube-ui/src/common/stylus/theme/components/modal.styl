// @type modal-container
$modal-border-radius := 7px 7px 0 0 // 边框圆角
$modal-bgc := $var(color-white) // 背景色

// @type modal-cancel
$modal-cancel-margin := 35px // 取消按钮外边距
$modal-cancel-height := 55px // 取消按钮高度
$modal-cancel-line-height := 55px // 取消按钮行高
$modal-cancel-padding := 0 25px 0 25px // 取消按钮内边距
$modal-cancel-font-size := $var(font-size-md) // 取消按钮字号
$modal-cancel-font-weight := 500 // 取消按钮字重
$modal-cancel-color := $var(color-black) // 取消按钮颜色
$modal-cancel-border-bottom-color := $var(border-color-normal) // 底部边框颜色

// @type modal-body
$modal-body-padding-top := 0 // 上内边距
$modal-body-padding-right := 25px // 右内边距
$modal-body-padding-bottom := 0 // 底部边距
$modal-body-padding-left := 25px // 左内边距

// @type modal-header
$modal-header-default-height := 35px // header区域高度

// @type modal-title
$modal-title-font-size := $var(font-size-3xl) // 标题字号
$modal-title-line-height := 1.33 // 标题行高
$modal-title-color := $var(color-black) // 标题颜色
$modal-title-margin-bottom := 12px // 标题下边距
$modal-title-default-font-weight := 500 // 标题字重

// @type modal-cancel-icon
$modal-close-icon-top := 5px // 关闭icon距离顶部距离
$modal-close-icon-right := 5px // 关闭icon距离右部距离
$modal-close-icon-padding := 5px // 关闭icon内边距
$modal-close-icon-font-size := $var(font-size-xl) // 关闭icon字号
$modal-close-icon-color := $var(color-black) // 关闭icon颜色
$modal-close-icon-font-weight := 700 // 关闭icon字重

// @type modal-content
$modal-content-line-height := 1.2 // 内容区行高
$modal-content-font-size := $var(font-size-xl) // 内容区字号
$modal-content-color := $var(text-color) // 内容区颜色

// @type modal-button-group
$modal-button-group-margin-top := 35px // 按钮顶部外边距
$modal-button-font-size := $var(font-size-lg) // 按钮字号
$modal-button-line-height := 24px // 按钮行高
$modal-button-padding-top := 13px // 按钮顶部内边距
$modal-button-padding-bottom := 13px // 按钮底部内边距
$modal-button-height := $modal-button-line-height + $modal-button-padding-top + $modal-button-padding-bottom // 按钮高度

// @type modal-footer
$modal-footer-padding := 0 25px 20px 25px // footer区域内边距
