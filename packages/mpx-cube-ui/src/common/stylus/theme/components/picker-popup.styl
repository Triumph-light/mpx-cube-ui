$picker-popup-header-height := 60px

$picker-popup-title-line-height := 1.389
$picker-popup-subtitle-line-height := 1.339

// margin
$picker-popup-content-margin := 20px 0
$picker-popup-subtitle-margin-top := 2px

// padding
$picker-popup-btn-padding := 0 16px

// font-size
$picker-popup-operate-font-size := $font-size-sm
$picker-popup-title-font-size := $font-size-lg
$picker-popup-subtitle-font-size := $font-size-xs

// color
$picker-popup-title-color := $var(text-color)
$picker-popup-subtitle-color := $var(text-color-hint)
$picker-popup-confirm-btn-color := $var(color-primary)
$picker-popup-cancel-btn-color := $var(text-color-hint)
$picker-popup-confirm-btn-active-color := #fdc2a5
$picker-popup-cancel-btn-active-color := #ccc
