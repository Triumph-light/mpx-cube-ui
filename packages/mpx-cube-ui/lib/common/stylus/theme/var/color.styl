// @type base
$color-white := #fff // 基础-白色
$color-black := #323233 // 基础-黑色

// @type theme
$color-primary := #FF7E33 // 基础-主要颜色
$color-secondary := #4F5E83 // 基础-次要颜色
$color-disabled := #ccc // 基础-禁用色

